// https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Agent {
  id               String          @id @default(uuid())
  name             String
  slug             String          @unique
  description      String?
  model            String          @unique
  createdAt        DateTime        @default(now())
  updatedAt        DateTime        @updatedAt

  sessions         AgentSession[]
}

model AgentSession {
  id             String          @id @default(uuid())
  agentId        String
  organisationId String
  createdAt      DateTime        @default(now())

  agent          Agent           @relation(fields: [agentId], references: [id])
  messages       AgentMessage[]
  variables      AgentVariable[]

  @@index([agentId])
}

model AgentMessage {
  id         String      @id @default(uuid())
  sessionId  String
  role       String
  sequenceId Int
  content    Json?
  variables  Json?
  createdAt  DateTime    @default(now())

  session    AgentSession @relation(fields: [sessionId], references: [id])

  @@index([sessionId])
}

model AgentVariable {
  id         String       @id @default(uuid())
  sessionId  String
  name       String
  value      Json?
  createdAt  DateTime     @default(now())

  session    AgentSession @relation(fields: [sessionId], references: [id])

  @@index([sessionId])
}
